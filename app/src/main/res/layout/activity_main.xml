<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Glavna vsebina -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- OpenStreetMap MapView -->
        <org.osmdroid.views.MapView
            android:id="@+id/osmmap"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarMainActivity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!--navbar-->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu_navigation"
        app:itemTextAppearance="@style/NavItemTextStyle"
        />



    <LinearLayout
        android:id="@+id/info_drawer"
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"

        android:layout_gravity="end"
        android:background="?attr/colorOnPrimary"
        android:orientation="vertical"
        android:padding="@dimen/drawer_padding">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/title_padding_top">

            <TextView
                android:id="@+id/meter_info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/drawer_padding_top"
                android:paddingBottom="@dimen/title_padding_bottom"
                android:textSize="@dimen/drawer_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/meter_info_value_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/drawer_title"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/property_padding_top">

            <TextView
                android:id="@+id/info_label_manufacturer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/drawer_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/info_value_manufacturer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/property_margin_start"
                android:textColor="@color/black"
                android:textSize="@dimen/drawer_text" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/property_padding_top">

            <TextView
                android:id="@+id/infoLabelType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/drawer_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/infoValueType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/property_margin_start"
                android:textColor="@color/black"
                android:textSize="@dimen/drawer_text" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/property_padding_top">

            <TextView
                android:id="@+id/infoLabelGasConsumption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/drawer_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/infoValueGasConsumption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/property_margin_start"
                android:textColor="@color/black"
                android:textSize="@dimen/drawer_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/property_padding_top">

            <TextView
                android:id="@+id/infoLabelFlowRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/drawer_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/infoValueFlowRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/property_margin_start"
                android:textColor="@color/black"
                android:textSize="@dimen/drawer_text" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/property_padding_top">

            <TextView
                android:id="@+id/infoLabelRelativeReading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/drawer_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/infoValueRelativeReading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/property_margin_start"
                android:textColor="@color/black"
                android:textSize="@dimen/drawer_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/property_padding_top">

            <TextView
                android:id="@+id/infoLabelAbsoluteReading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/drawer_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/infoValueAbsoluteReading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/property_margin_start"
                android:textColor="@color/black"
                android:textSize="@dimen/drawer_text" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/property_padding_top">

            <TextView
                android:id="@+id/infoLabelOperatingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/drawer_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/infoValueOperatingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/property_margin_start"
                android:textColor="@color/black"
                android:textSize="@dimen/drawer_text" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/property_padding_top">

            <TextView
                android:id="@+id/infoLabelBatteryStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/drawer_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/infoValueBatteryStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/property_margin_start"
                android:textColor="@color/black"
                android:textSize="@dimen/drawer_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/property_padding_top">

            <TextView
                android:id="@+id/infoLabelRemoteReading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/drawer_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/infoValueRemoteReading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/property_margin_start"
                android:textColor="@color/black"
                android:textSize="@dimen/drawer_text" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/property_padding_top">

            <TextView
                android:id="@+id/infoLabelLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/drawer_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/infoValueLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/property_margin_start"
                android:textColor="@color/black"
                android:textSize="@dimen/drawer_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/property_padding_top">

            <TextView
                android:id="@+id/infoLabelCoordinates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/drawer_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/infoValueCoordinates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/property_margin_start"
                android:textColor="@color/black"
                android:textSize="@dimen/drawer_text" />
        </LinearLayout>



            <Button
                android:id="@+id/drawer_refresh_data_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/refresh_data"
                android:layout_marginTop="@dimen/close_button_margin_top"/>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
