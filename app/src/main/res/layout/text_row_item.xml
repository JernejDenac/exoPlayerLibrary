<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/border_background">

    <TextView
        android:id="@+id/textViewDeliveryNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number_text_rcycler"
        android:textSize="18sp"
        android:textColor="@color/titleColor"
        android:drawablePadding="5dp"/>
       <!-- app:drawableStartCompat="@drawable/delivery_svgrepo_com" -->


    <TextView
        android:id="@+id/textViewType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/type_text_recycler"
        android:textSize="18sp"
        android:textColor="@color/titleColor"
        android:drawablePadding="5dp"/>
       <!-- app:drawableStartCompat="@drawable/coffee_bean_filled_roast_brew_svgrepo_com"-->


    <TextView
        android:id="@+id/textViewOrigin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:text="@string/battery_status"
        android:textSize="18sp"
        android:textColor="@color/titleColor"/>
        <!--app:drawableStartCompat="@drawable/world_svgrepo_com_1_"-->


    <TextView
        android:id="@+id/textViewFlavor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:text="@string/location"
        android:textSize="18sp"
        android:textColor="@color/titleColor"/>
       <!-- app:drawableStartCompat="@drawable/world_svgrepo_com_1_"-->
</LinearLayout>